{
  "name": "truffle_boilerplate",
  "version": "0.0.1",
  "description": "Frontend with tested contracts using webpack",
  "scripts": {
    "lint": "eslint ./",
    "build": "webpack",
    "build-docker": "./scripts/build_docker.sh",
    "clean": "rm -rf .node-xml* node_modules",
    "logs-ipfs": "docker logs ipfs --follow",
    "logs-testrpc": "docker logs testrpc --follow",
    "services": "./scripts/start_services.sh",
    "start": "webpack-dev-server --host 0.0.0.0 --port 3000 --hot --content-base build",
    "test": "yarn run test-contracts; yarn run test-web",
    "test-contracts": "truffle test",
    "test-web": "mocha --compilers js:babel-register spec/**/*.spec.js"
  },
  "author": "Frederick Lindsey",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^1.0.0",
    "eslint": "^5.5.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "ipfs-api": "^24.0.1",
    "json-loader": "^0.5.4",
    "mocha": "^5.2.0",
    "node-sass": "^4.5.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.3",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "truffle": "^4.1.14",
    "truffle-contract": "^3.0.6",
    "truffle-solidity-loader": "git+https://github.com/sogoiii/truffle-solidity-loader.git#1f1e213d52f033b6863218307b8968ae68220fe1",
    "web3": "^0.20.7",
    "webpack": "^4.17.2",
    "webpack-dev-server": "^3.1.7"
  },
  "dependencies": {
    "ethereumjs-testrpc": "^6.0.3"
  }
}
